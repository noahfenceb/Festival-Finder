@using Festival_Finder.ViewModel
@model EditArtistViewModel

<h1>Edit Artist</h1>

<div class="py-5 container">
    <form method="post">

        <div class="mb-3">
            <input type="hidden" asp-for="Id"/>
        </div>

        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" asp-for="Name" class="form-control"/>
        </div>

        <div>
            <div class="d-flex">
                <button type="submit" class="btn btn-primary">Update</button>
                <button type="submit" class="btn btn-danger ms-3" asp-controller="Artist" asp-action="Delete">Delete</button>
            </div>
        </div>

    </form>
</div>