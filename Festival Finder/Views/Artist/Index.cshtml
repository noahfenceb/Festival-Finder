@model List<Artist>

<h1>All Artist</h1>

@if (Model.Count == 0)
{
    <p>No Artist</p>
}
else
{
    <table class="table table-striped table-bordered">
        <tr>
            <th scope="col">ID
            <th scope="col">Artist Name</th>
            <th scope="col">Action</th>
        </tr>
        @foreach (Artist artist in Model)
        {
            <tr>
                <td>@artist.Id</td>
                <td><a asp-controller="Tag" asp-action="Detail" asp-route-id="@artist.Id">@artist.Name</a></td>
                <td><a asp-controller="Artist" asp-action="Edit" asp-route-id="@artist.Id">Edit</a></td>
            </tr>
        }
    </table>
}