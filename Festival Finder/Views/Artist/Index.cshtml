@model List<Artist>

<h1 class="text-white mb-3">All Artist</h1>

<a class="btn btn-primary mb-3" asp-controller="Artist" asp-action="Add">Add Artist</a>

@if (Model.Count == 0)
{
    <p class="text-white">No Artist</p>
}
else
{
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th scope="col" class="text-white">ID
            <th scope="col" class="text-white">Artist Name</th>
            <th scope="col" class="text-white">Action</th>
        </tr>
        @foreach (Artist artist in Model)
        {
            <tr>
                <td class="text-white">@artist.Id</td>
                <td><a asp-controller="Tag" asp-action="Detail" asp-route-id="@artist.Id">@artist.Name</a></td>
                <td><a asp-controller="Artist" asp-action="Edit" asp-route-id="@artist.Id">View</a></td>
            </tr>
        }
    </table>
}