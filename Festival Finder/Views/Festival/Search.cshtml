@model List<Festival>

<h1 class="text-white">Search Results</h1>

@if (Model.Count == 0)
{
    <p class="text-white">No results found.</p>
}
else
{
    <ul class="container">
        @foreach (var festival in Model)
        {
            <li>
                <div class="row">
                    <div class="col-4">
                        <img src="@festival.ImageUrl" alt="project-image" class="rounded" width="350" height="300">
                    </div>
                    <div class="col-8">
                        <p class="text-white">@festival.Name</p>
                        <p class="text-white">@festival.Description</p>
                        @if (festival.Location != null)
                        {
                            <p class="text-white">@festival.Location.City</p>
                        }
                        <p class="me-2 text-white">
                            @if (festival.Artists != null)
                            {
                                <span>Artist:</span>
                                @foreach (var artist in festival.Artists)
                                {
                                    <span class="badge bg-warning me-1">@artist.Name</span>
                                }
                            }
                        </p>
                    </div>
                </div>
            </li>
        }
    </ul>
}
