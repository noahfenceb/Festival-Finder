@model List<Festival>

<h2>Search Results</h2>

@if (Model.Count == 0)
{
    <p class="text-white">No festivals found.</p>
}
else
{
    <ul>
        @foreach (var festival in Model)
        {
            <li>
                <h3 class="text-white">@festival.Name</h3>
                <p class="text-white">@festival.Description</p>
                <p class="text-white">@festival.Location.City</p>
            </li>
        }
    </ul>
}

<a class="btn btn-secondary my-4" asp-controller="Festival" asp-action="Index">Back To Festival</a>