@model Festival_Finder.ViewModel.RegisterViewModel


<div class="container mx-auto">
    <h3 class="my-4">Register</h3>
    <form method="post">
        <div class="mb-3">
            <label class="form-label text-white">Username</label>
            <input type="text" id="username" class="form-control" asp-for="Username" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label text-white">Email</label>
            <input type="email" id="email" class="form-control" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label text-white">Password</label>
            <input type="password" id="password" class="form-control" asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" value="User" id="user-role" checked disabled/>
                <label class="form-check-label text-white" for="user-role">User</label>
            </div>

            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="admin-role" asp-for="IsAdmin"/>
                <label class="form-check-label text-white" for="user-role">Admin</label>
            </div>
        </div>

        <button class="mb-3 btn btn-primary text-white" type="submit">Register</button>
    </form>
</div>
